{
    "data_loader": {
        "type" : "Icentia_batch",
        "args" : {
            "class" : "binary",
            "batch_size" : 2000,
            "num_workers" :8,
            "path" :  "/data/hongwonseok/Icentia_dualnet/Icentia_dualnet/icentia11k",
            "signal_type" : "beat",
            "unfold" : false,
            "spectrogram" : false
        }
    
    },

    "model" : {
        "type" : "MLP",
        "args":{
            "num_classes":  2
        }
    },

    "optimizer" : {
        "type" : "Adam",
        "args": {
            "lr" : 2e-4,
            "weight_decay" : 1e-4
        }
    },

    "metric" : {
        "type" : "AUROC",
        "task" : "multiclass",
        "average" : "macro"
      
    },


    "loss" :{
        "type" : "Weighted_CE_loss",
        "weight" : [0.3,0.7]
    },

    "trainer" : {
        "num_epochs" : 300,
        "early_stopping_epochs" : 25,
        "lr" : 2e-4,
        "weight_decay" : 1e-4,
        "best_model_path" : "/data/hongwonseok/ECG-SNN/best_model/Icentia_batch/model_beat_11000_batch_2000.pth",
        "T_max": 50,
        "eta_min" : 1e-5
    },

    "tensorboard": {
        "act" : true,
        "path" : "./result/Icentia_batch_2000_beat_11000_2"
    },


    "device" : {
        "gpu" : "0",
        "cuda" : "cuda"
    }
}