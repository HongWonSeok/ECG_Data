{
    "data_loader": {
        "type" : "MIT-BIH",
        "args" : {
            "class" : "binary",
            "batch_size" : 64,
            "num_workers" :8,
            "path" :  {
                "train" : "/data/common/MIT-BIH/mitbih_train.csv",
                "eval" : "/data/common/MIT-BIH/mitbih_test.csv"
                }
        }
    
    },

    "model" : {
        "type" : "MLP",
        "args":{
            "num_classes":  2
        }
    },

    "optimizer" : {
        "type" : "Adam",
        "args": {
            "lr" : 2e-4,
            "weight_decay" : 1e-4
        }
    },

    "metric" : {
        "type" : "AUROC",
        "task" : "multiclass",
        "average" : "macro"
      
    },


    "loss" :{
        "type" : "Weighted_CE_loss",
        "weight" : [0.2, 0.8]
 
    },

    "trainer" : {
        "num_epochs" : 150,
        "early_stopping_epochs" : 25,
        "lr" : 2e-4,
        "weight_decay" : 1e-4,
        "best_model_path" : "/data/hongwonseok/ECG-SNN/best_model/MLP/mul_MLP_model_25.pth",
        "T_max": 50,
        "eta_min" : 1e-5
    },

    "tensorboard": {
        "act" : true,
        "path" : "./result/MIT_BIH"
    },


    "device" : {
        "gpu" : "2",
        "cuda" : "cuda"
    }
}